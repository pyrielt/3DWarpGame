ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  libgkit3GL_config = debug
  tp1_config = debug
  tp2_config = debug
  tp3_config = debug
  tp4_config = debug
  portal_config = debug
endif
ifeq ($(config),release)
  libgkit3GL_config = release
  tp1_config = release
  tp2_config = release
  tp3_config = release
  tp4_config = release
  portal_config = release
endif

PROJECTS := libgkit3GL tp1 tp2 tp3 tp4 portal

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

libgkit3GL:
ifneq (,$(libgkit3GL_config))
